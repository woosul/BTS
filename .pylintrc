
[MASTER]
# Only lint .py files in this project
# load-plugins=pylint_micropython
# pylint_micropython is not available on PyPI, so we need to use the local version
# (eg. pip install pylint_micropython)
ignore=venv
load-plugins=
init-hook='import sys;'
# init-hook='import sys; sys.path.append("./typings"); sys.path.append("/Users/denny/.local/share/stubs/combined")'

[MESSAGES CONTROL]
# Disable annoying warnings
disable=
    import-error,
    missing-function-docstring,
    missing-module-docstring,
    missing-class-docstring,
    invalid-name,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-instance-attributes,
    too-many-branches,
    too-many-statements,
    no-value-for-parameter,
    unexpected-keyword-arg,
    line-too-long,
    broad-except,
    trailing-whitespace,
    trailing-newlines,
    too-many-lines

[BASIC]
# Allow camelCase for variable names
variable-rgx=[a-zA-Z_][a-zA-Z0-9]*$
function-rgx=[a-zA-Z_][a-zA-Z0-9]*$
argument-rgx=[a-zA-Z_][a-zA-Z0-9]*$
attr-rgx=[a-zA-Z_][a-zA-Z0-9]*$
class-rgx=[A-Z][a-zA-Z0-9]+$
const-rgx=([A-Z_][A-Z0-9_]*)|(__.*__)$

[FORMAT]
max-line-length=180

[TYPECHECK]
generated-members=machine.*

